#!/bin/bash
# Pre-commit hook for cambium-nms-templates
# Runs the same linting checks as GitHub CI

set -e

echo "üîç Running pre-commit checks..."

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Get the root of the git repository
REPO_ROOT=$(git rev-parse --show-toplevel)

echo ""

# Run the full lint script (same as GitHub CI)
if ! "$REPO_ROOT/scripts/lint.sh"; then
    echo ""
    echo -e "${RED}‚ùå Pre-commit checks failed!${NC}"
    echo -e "${YELLOW}Fix the issues above and try again${NC}"
    echo -e "${YELLOW}Or use 'git commit --no-verify' to bypass (not recommended)${NC}"
    exit 1
fi

echo ""
echo -e "${GREEN}‚úÖ All pre-commit checks passed!${NC}"
exit 0
